{
  "expo": {
    "name": "pang-app",
    "slug": "pang-app",
    "version": "1.0.0",
    "orientation": "default",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "pang-app",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.pang.app",
      "infoPlist": {
        "UIBackgroundModes": [
          "audio"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.pang.app"
    },
    "web": {
      "favicon": "./assets/favicon.png"
    },
    "fonts": [
      "./assets/fonts/WantedSans-Regular.otf",
      "./assets/fonts/WantedSans-Medium.otf",
      "./assets/fonts/WantedSans-SemiBold.otf",
      "./assets/fonts/WantedSans-Bold.otf",
      "./assets/fonts/WantedSans-ExtraBold.otf",
      "./assets/fonts/WantedSans-Black.otf",
      "./assets/fonts/WantedSans-ExtraBlack.otf"
    ],
    "plugins": [
      [
        "expo-video",
        {
          "supportsBackgroundPlayback": true,
          "supportsPictureInPicture": true
        }
      ]
    ]
  }
}
